@model Planner.Models.Lembrete

@{
    ViewData["Title"] = "Detalhes do Lembrete";
}

<h1>Detalhes do Lembrete</h1>

<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Tipo de Lembrete</dt>
        <dd class="col-sm-10">@Model.TipoLembrete</dd>

        <dt class="col-sm-2">Recorrente Semanal</dt>
        <dd class="col-sm-10">@Model.RecorrenteSemanal</dd>

        <dt class="col-sm-2">Data e Hora</dt>
        <dd class="col-sm-10">@Model.DataHora</dd>
    </dl>
    <a href="@Url.Action("Editar", new { id = Model.Id })" class="btn btn-primary">Editar</a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Voltar</a>
</div>
